datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id    String @id @default(uuid())
    email String @unique
    tasks Task[]
}

model Task {
    id       Int    @id @default(autoincrement())
    name     String
    user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId   String
    priority Int
}
